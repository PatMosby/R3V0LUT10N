<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

    <!-- welcome page (index) -->	
    <navigation-rule>
        <display-name>index.xhtml</display-name>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>addbook</from-outcome>
            <to-view-id>/book/add.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>addreader</from-outcome>
            <to-view-id>/reader/add.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/faces/login.xhtml</to-view-id>
        </navigation-case>   
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>       
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>          
    </navigation-rule>

	<!-- login form -->
    <navigation-rule>
    	<display-name>faces/login.xhtml</display-name>
    	<from-view-id>/faces/login.xhtml</from-view-id>
    	<navigation-case>
    		<from-outcome>index</from-outcome>
    		<to-view-id>/index.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>  

    <!-- reader list form -->        
    <navigation-rule>
        <display-name>reader/list.xhtml</display-name>
        <from-view-id>/reader/list.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>add</from-outcome>
            <to-view-id>/reader/add.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>edit</from-outcome>
            <to-view-id>/reader/change.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <!-- reader addition form -->   
    <navigation-rule>
        <display-name>reader/add.xhtml</display-name>
        <from-view-id>/reader/add.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/reader/add.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>cancel</from-outcome>
            <to-view-id>/reader/list.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>reset</from-outcome>
            <to-view-id>/reader/add.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/reader/add.xhtml</to-view-id>
        </navigation-case> 
    </navigation-rule>
    
    <!-- reader change form -->   
    <navigation-rule>
        <display-name>reader/change.xhtml</display-name>
        <from-view-id>/reader/change.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/reader/list.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>cancel</from-outcome>
            <to-view-id>/reader/list.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>reset</from-outcome>
            <to-view-id>/reader/change.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/reader/change.xhtml</to-view-id>
        </navigation-case> 
    </navigation-rule>
    
    <!-- book list form -->        
    <navigation-rule>
        <display-name>book/list.xhtml</display-name>
        <from-view-id>/book/list.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>add</from-outcome>
            <to-view-id>/book/add.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>edit</from-outcome>
            <to-view-id>/book/change.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
        
	<!-- book addition form -->        
	<navigation-rule>
		<display-name>book/add.xhtml</display-name>
		<from-view-id>/book/add.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/book/add.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>error</from-outcome>
			<to-view-id>/book/add.xhtml</to-view-id>
		</navigation-case>		
		<navigation-case>
			<from-outcome>cancel</from-outcome>
			<to-view-id>/book/list.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>reset</from-outcome>
			<to-view-id>/book/add.xhtml</to-view-id>
		</navigation-case>					
	</navigation-rule>

	<!-- book lookup form -->        
	<navigation-rule>
		<display-name>book/lookup.xhtml</display-name>
		<from-view-id>/book/lookup.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/book/lookup.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>cancel</from-outcome>
			<to-view-id>/book/list.xhtml</to-view-id>
		</navigation-case>		
	</navigation-rule>

    <!-- book change form -->   
    <navigation-rule>
        <display-name>book/change.xhtml</display-name>
        <from-view-id>/book/change.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/book/list.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>cancel</from-outcome>
            <to-view-id>/book/list.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>reset</from-outcome>
            <to-view-id>/book/change.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/book/change.xhtml</to-view-id>
        </navigation-case> 
    </navigation-rule>

    <!-- admin form -->        
    <navigation-rule>
        <display-name>admin/admin.xhtml</display-name>
        <from-view-id>/admin/admin.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/admin.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>cancel</from-outcome>
            <to-view-id>/admin/admin.xhtml</to-view-id>
        </navigation-case>      
    </navigation-rule>
    	
	<!-- localization -->
  	<application>
		<resource-bundle>
			<base-name>swp.bibjsf.properties.messages</base-name>
			<var>messages</var>
		</resource-bundle>
		<locale-config>
		    <default-locale>de</default-locale>
		    <supported-locale>de</supported-locale>
		</locale-config>
	</application>

</faces-config>